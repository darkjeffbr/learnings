{
    "compilerOptions": {
        "lib": [
            "es2018"
        ],
        "target": "es2018",
        "module": "commonjs",
        "noImplicitAny": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "strictNullChecks": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}